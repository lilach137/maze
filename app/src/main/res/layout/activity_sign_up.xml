<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Register to Maze Game"
            android:textColor="@color/teal_200"
            android:textSize="50sp"
            android:fontFamily="@font/font2"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:src="@drawable/ic_maze" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                app:startIconDrawable="@drawable/ic_user"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="3dp"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/main_EDT_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F3EF"
                    android:hint="user name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/font2"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/main_LOT_password"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                app:startIconDrawable="@drawable/ic_password"
                app:endIconMode="password_toggle"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="3dp"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/main_EDT_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textSize="20sp"
                    android:fontFamily="@font/font2"
                    android:textStyle="bold"
                    android:background="#F6F3EF"
                    android:inputType="textPassword"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <CheckBox
                android:id="@+id/premium_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font2"
                android:textSize="30sp"
                android:textColor="@color/teal_200"
                android:text="Premium" />


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/main_FAB_sign_up"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/teal_200"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Lets Go!"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/font2" />



        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>